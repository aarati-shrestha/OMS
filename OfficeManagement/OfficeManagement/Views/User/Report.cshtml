@{
    ViewBag.Title = "Report";
    int userId = ViewBag.UserId;
}

<div class="panel panel-default" style="margin:0 290px 0 290px;">
    <div class="panel-body">
        <div class="form-group col-sm-6">
            @Html.Hidden("userId",userId)
            @Html.TextBox("txtStartDate", "", new { @class = "form-control", placeholder = "Ending date", type = "date"  })
        </div>

        <div class="form-group col-sm-6">
            @Html.TextBox("txtEndDate", "", new { @class = "form-control", placeholder = "Starting date", type = "date" })
        </div>

        <div class="form-group" style="margin-left: 45px;">
            <div class="col-sm-offset-2 col-sm-10" style="margin-left:230px;">
                <input type="button" onclick="ShowLeaveRecord()" class="btn btn-primary btn-lg" value="Search"/>
            </div>
        </div>
        <hr/>
        <div id="divLeaveList"></div>

    </div>
    </div>

<script src="~/Scripts/user.js"></script>